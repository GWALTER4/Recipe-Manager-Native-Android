<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin"
    tools:context=".AddRecipeActivity">

    <TextView
        android:id="@+id/text_view_heading_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_bottom_margin"
        android:gravity="center|start"
        android:text="@string/heading_instruction"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_bottom_margin"
        android:gravity="top|left"
        android:fontFamily="sans-serif-light"
        android:hint="@string/hint_instruction"
        android:inputType="textMultiLine"
        android:maxLength="500"
        android:minLines="4"
        android:maxLines="15"
        android:textAppearance="?android:textAppearanceMedium"
        android:text=""/>

</LinearLayout>